    {
      "depTypeList": ["dependencies"],
      "automergeType": "branch",
      "updateTypes": ["patch"],
      "semanticCommitType": "deps",
      "automerge": true
    }
  ],
  "rebaseWhen": "behind-base-branch",
  "masterIssue": true
}
