{
  "extends": ["config:js-lib", ":maintainLockFilesWeekly"],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["patch", "minor", "major"],
      "automergeType": "branch",
      "automerge": true,
      "semanticCommitScope": "dev-deps"
